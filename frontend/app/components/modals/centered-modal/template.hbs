{{#modal-dialog
    targetAttachment="center"
    translucentOverlay=true
    container-class="centered-modal"
    close=close
}}
  <div class="modal-dialog centered-modal__dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" {{action close}}>&times;</button>
        <h4 class="modal-title">{{headerText}}</h4>
      </div>
      <div class="modal-body">
        {{yield}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" {{action close}}>Закрыть</button>
        <button type="button" class="btn btn-primary" {{action (pipe (action save) (action close))}}>Сохранить</button>
      </div>
    </div>
  </div>
{{/modal-dialog}}